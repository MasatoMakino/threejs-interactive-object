{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./esm",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__test__"]
}
